<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Checkin</th>
      <th>Checkout</th>
      <th>Status</th>
      <th>Grade</th>
      <th>Card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% if @attendances %>
      <% @attendances.each do |attendance| %>
        <tr>
          <td><%= attendance.date.strftime("%d,%b-%Y")  if attendance.date %></td>
          <td><%= attendance.checkin.strftime("%I:%M %P") if attendance.checkin %></td>
          <td><%= attendance.checkout.strftime("%I:%M %P") if attendance.checkout %></td>
          <td><%= attendance.status %></td>
          <td><%= attendance.grade %>%</td>
          <td><%= attendance.card_opal_number %></td>
          <td><%= link_to 'Show', attendance %></td>
          <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
          <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
      <p> No attendance logged by the card yet, tap the card or ask your educator or student services to register your card</p>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path %>
