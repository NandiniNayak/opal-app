<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Checkout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @attendances %>
      <% @attendances.where.not(checkin: nil).each do |attendance| %>
        <tr>
          <td><%= attendance.date.strftime("%d,%b-%Y")  if attendance.date %></td>
          <td><%= attendance.checkout.strftime("%I:%M %P") if attendance.checkout %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path %>
